{
  "name": "flipdisc-orchestrator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "devDependencies": {
    "bun-types": "^1.0.0",
    "@types/bun": "^1.0.0"
  },
  "scripts": {
    "dev": "bun orchestrator/index.ts",
    "start": "bun run dev",
    "build:server": "bun build --target=bun --outdir=dist orchestrator/index.ts",
    "build:ui": "bun build --target=bun --production --outdir=dist orchestrator/ui/index.html",
    "build": "bun run build:server && bun run build:ui"
  }
}
