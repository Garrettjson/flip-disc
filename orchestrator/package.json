{
  "name": "flip-disc-orchestrator",
  "version": "0.1.0",
  "description": "Orchestrator for flip disc display animations and worker coordination",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "test": "bun test",
    "lint": "bunx @biomejs/biome lint src/",
    "format": "bunx @biomejs/biome format src/ --write"
  },
  "dependencies": {
    "kaitai-struct": "^0.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^1.9.4"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "keywords": [
    "flip-disc",
    "display",
    "orchestrator",
    "animation",
    "bun",
    "typescript"
  ]
}
